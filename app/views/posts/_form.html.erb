<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :content %>
    <%= f.input :featured_image %>
    <%= f.association :categories, as: :check_boxes %>
    <%= f.association :user, label_method: :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>